{
    "name": "@upradata/node-util",
    "author": {
        "name": "El Pupi (Upra-Data)",
        "email": "elpupi@upradata.com",
        "url": "https://github.com/upradata"
    },
    "repository": {
        "url": "https://github.com/upradata/node-util.git"
    },
    "license": "MIT",
    "version": "2.0.0",
    "description": "Set of typescript util tools working in NodeJs",
    "sideEffects": false,
    "main": "lib-es6",
    "types": "lib-esnext",
    "module": "lib-esnext",
    "files": [
        "lib-es5",
        "lib-es6",
        "lib-esnext"
    ],
    "esm": {
        "mainFields": [
            "module",
            "main"
        ]
    },
    "exports": {
        "./*": {
            "import": "./lib-esnext/*",
            "require": "./lib-es6/*",
            "types": "./lib-esnext/*"
        },
        ".": {
            "import": "./lib-esnext/index.js",
            "require": "./lib-es6/index.js"
        }
    },
    "scripts": {
        "build": "heft build",
        "build:watch": "heft build-watch",
        "rebuild": "heft build --clean",
        "test": "heft test",
        "e2e": "jest --passWithNoTests --verbose false --config jest-e2e.config.js",
        "github-push": "npm version patch && git pushall && git pushall-tags",
        "npm-publish": "npm run build && npm publish --access public"
    },
    "dependencies": {"@upradata/useful":"workspace:*"},
    "devDependencies": {
        "@rushstack/heft": "0.62.3",
        "@types/fs-extra": "^11.0.2",
        "@types/heft-jest": "1.0.4",
        "@types/jest": "^29.5.5",
        "@types/node": "20.8.4",
        "@upradata/eslint-config": "workspace:*",
        "@upradata/find-up": "workspace:*",
        "@upradata/heft-node-rig": "workspace:*",
        "@upradata/stats": "workspace:*",
        "@upradata/types": "workspace:*",
        "fs-extra": "^11.1.1",
        "memory-fs": "~0.5.0",
        "tslib": "~2.6.2",
        "typescript": "~5.2.2"
    },
    "publishConfig": {
        "access": "public"
    },
    "peersDependencies": {}
}
