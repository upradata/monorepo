{
    "name": "@upradata/util",
    "author": {
        "name": "Thomas Milotti",
        "email": "thomas.milotti@gmail.com",
        "url": "https://github.com/milottit"
    },
    "repository": {
        "url": "https://github.com/upradata/util"
    },
    "license": "MIT",
    "version": "16.0.3",
    "description": "Set of typescript util tools working in Web runtime",
    "sideEffects": false,
    "main": "lib-es6",
    "types": "lib-esnext",
    "module": "lib-esnext",
    "files": [
        "lib-es5",
        "lib-es6",
        "lib-esnext"
    ],
    "scripts": {
        "build": "heft build",
        "build:watch": "heft build-watch",
        "rebuild": "heft build --clean",
        "test": "heft test",
        "clean2": "shx rm -rf lib lib-esm",
        "pre-build2": "npm run clean",
        "build2": "concurrently 'tsc -p tsconfig.lib.json' 'tsc -p tsconfig.lib-esm.json'",
        "post-build2": "npm run test && npm run e2e",
        "watch": "npm run build:watch",
        "build:watch2": "concurrently 'tsc -p tsconfig.lib.json -w' 'tsc -p tsconfig.lib-esm.json -w'",
        "test2": "jest --passWithNoTests --verbose false --config jest-ut.config.js",
        "e2e": "jest --passWithNoTests --verbose false --config jest-e2e.config.js",
        "github-push": "npm run build && npm version patch && git pushall && git pushall-tags",
        "npm-publish": "npm run build && npm publish --access public"
    },
    "dependencies": {
        "common-tags": "^1.8.2",
        "emoji-regex": "^10.2.1"
    },
    "devDependencies": {
        "@upradata/heft-node-rig": "workspace:*",
        "@upradata/eslint-config": "workspace:*",
        "@rushstack/eslint-plugin": "~0.13.0",
        "@rushstack/eslint-config": "3.3.4",
        "@rushstack/heft": "0.61.0",
        "@rushstack/heft-lint-plugin": "0.2.2",
        "@types/fs-extra": "^11.0.2",
        "@types/heft-jest": "1.0.4",
        "@types/memory-fs": "~0.3.3",
        "@types/node": "20.6.3",
        "@types/common-tags": "^1.8.2",
        "@mxssfd/typedoc-theme": "^1.1.3",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-prettier": "^9.0.0",
        "eslint-define-config": "~1.23.0",
        "eslint-import-resolver-exports": "1.0.0-beta.5",
        "eslint-plugin-import": "^2.28.1",
        "eslint-plugin-jsx-a11y": "^6.7.1",
        "eslint-plugin-prettier": "~5.0.0",
        "eslint-plugin-promise": "~6.1.1",
        "eslint-plugin-react": "~7.33.2",
        "eslint-plugin-tsdoc": "~0.2.17",
        "eslint-import-resolver-typescript": "~3.6.1",
        "tslib": "~2.6.2",
        "local-web-server": "^5.3.0",
        "typedoc-plugin-clarity": "^1.5.0",
        "typedoc-plugin-coverage": "^2.2.0",
        "typedoc-plugin-extras": "^3.0.0",
        "typedoc-plugin-keywords": "^1.5.0",
        "typedoc-theme-hierarchy": "^4.1.1",
        "typescript": "~5.2.2"
    },
    "keywords": [
        "typescript",
        "util"
    ],
    "publishConfig": {
        "access": "public"
    }
}
